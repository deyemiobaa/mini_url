<div class="w-full">
  <div class="flex flex-col items-center justify-between gap-10">
    <h1 class="text-4xl font-bold">Mini URL</h1>
    <p class="text-2xl font-semibold">Add a URL to generate a new short link</p>
  </div>

  <div class="w-full mx-auto my-20 md:w-2/3">
    <%= render "form", link: @link, custom: false %>
    <%= link_to 'Create custom link', new_link_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

  <table class="w-4/5 mx-auto overflow-auto border-separate table-auto text-slate-500">
    <thead>
      <tr>
        <th class="p-3 text-sm font-semibold text-left text-black bg-gray-200">
          Shortened URL
        </th>
        <th class="p-3 text-sm font-semibold text-left text-black bg-gray-200">
          Clicks
        </th>
      </tr>
    </thead>
    <tbody id="links" class="min-w-full">
      <%= render @links %>
    </tbody>
  </table>
</div>
